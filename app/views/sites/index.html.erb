<h1>Listing sites</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Gps lat</th>
    <th>Gps lon</th>
    <th>Description</th>
    <th>Difficulty</th>
    <th>Depth</th>
    <th>Site type</th>
    <th>Sub type</th>
    <th>Sink date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.location %></td>
    <td><%= site.gps_lat %></td>
    <td><%= site.gps_lon %></td>
    <td><%= site.description %></td>
    <td><%= site.difficulty %></td>
    <td><%= site.depth %></td>
    <td><%= site.site_type %></td>
    <td><%= site.sub_type %></td>
    <td><%= site.sink_date %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

